<?xml version='1.0' encoding='utf-8'?>
<widget id="com.myfileitpe1.app" version="1.0.22" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps">
    <preference name="loglevel" value="DEBUG" />
    <icon src="icon.png" />
    <name>MyFileIT PE</name>
    <description>MyFileIT document sharing and storage. Personal and expenses.</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">J Osifchin</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="SplashScreen" value="splash" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="deployment-target" value="7.0" />
    <preference name="windows-target-version" value="8.0" />
    <preference name="windows-phone-target-version" value="8.1" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name="pgb-builder-version" value="1" />
    <vs:plugin name="cordova-plugin-inappbrowser" source="npm" />
    <vs:plugin name="org.apache.cordova.camera" source="git" spec="https://github.com/apache/cordova-plugin-camera.git#2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="App would like to access the camera." />
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="App would like to access the microphone." />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="App would like to access the library." />
    </vs:plugin>
    <vs:plugin name="cc.fovea.cordova.purchase" source="npm" version="6.0.0">
        <param name="BILLING_KEY" value="" />
    </vs:plugin>
    <vs:plugin name="phonegap-admob" source="npm" />
    <vs:platformSpecificValues />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <vs:splash src="splash.png" />
    <vs:splash src="resources/splash.png" vs:platform="android" />
    <vs:splash height="1334" src="res/screens/ios/splash_iphone6.png" vs:platform="ios" width="750" />
    <vs:splash height="2208" src="res/screens/ios/splash_iphone6plus.png" vs:platform="ios" width="1242" />
    <vs:splash height="1136" src="res/screens/ios/splash_iphone5.png" vs:platform="ios" width="640" />
    <vs:splash height="1024" src="res/screens/ios/splash_ipad.png" vs:platform="ios" width="768" />
    <vs:splash height="2048" src="res/screens/ios/splash_ipadretina.png" vs:platform="ios" width="1536" />
    <vs:splash height="480" src="res/screens/ios/splash_ipod.png" vs:platform="ios" width="320" />
    <vs:splash height="960" src="res/screens/ios/splash_ipodretina.png" vs:platform="ios" width="640" />
    <vs:splash src="resources/splash.png" vs:platform="winphone" />
    <icon height="72" platform="ios" src="resources/images/icons/ios/MyFileIt_icon72_72.png" width="72" />
    <icon height="144" platform="ios" src="resources/images/icons/ios/MyFileIt_icon72_72.png" width="144" />
    <icon height="57" platform="ios" src="resources/images/icons/ios/MyFileIT_icon57_57.png" width="57" />
    <icon height="76" platform="ios" src="resources/images/icons/ios/MyFileIt_icon76_76.png" width="76" />
    <icon height="120" platform="ios" src="resources/images/icons/ios/MyFileIT_icon120_120.png" width="120" />
    <icon height="152" platform="ios" src="resources/images/icons/ios/MyFileIT_icon152_152.png" width="152" />
    <icon height="1024" platform="ios" src="resources/images/icons/ios/MyFileIT_icon1024_1024.png" width="1024" />
    <icon height="40" platform="ios" src="resources/images/icons/ios/MyFileIT_icon40_40.png" width="40" />
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
</widget>
