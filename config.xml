<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.myfileit.app" version="1.0.0">

  <name>MyFileIT Documents</name>
  <description>MyFileIT document sharing and storage. uu</description>
  <author href="http://cordova.io" email="dev@cordova.apache.org">J Osifchin</author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="SplashScreen" value="screen" />
  <preference name="windows-target-version" value="8.0" />
  <preference name="windows-phone-target-version" value="8.1" />
  <preference name="Orientation" value="portrait" />
  <preference name="Fullscreen" value="false" />
  
  <gap:plugin name="org.apache.cordova.camera"/>
  
  <access origin="*"/>
   
  <plugin name="cordova-plugin-whitelist" version="1"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  
  <allow-intent href="*" />
  <allow-navigation href="*" />

  
</widget>