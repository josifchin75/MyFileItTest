  <!--   <vs:plugin name="cc.fovea.plugins.inapppurchase" spec="3.4.0" source="pgb" /> -->
  <!-- <plugin name="com.admob.google" spec="4.0.8" source="pgb" /> -->

  <vs:platformSpecificValues />

  <plugin name="cordova-plugin-whitelist" version="1"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>


  <!--SPLASH SCREENS-->
  <vs:splash src="splash.png" />
  <!--Android-->
  <vs:splash src="resources/splash.png" vs:platform="android" />

  <!-- iOS-->
  <!--iphone6-->
  <vs:splash src="res/screens/ios/splash_iphone6.png" vs:platform="ios" width="750" height="1334" />
  <!--iphone6+-->
  <vs:splash src="res/screens/ios/splash_iphone6plus.png" vs:platform="ios" width="1242" height="2208" />
