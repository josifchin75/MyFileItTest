  <vs:splash src="res/screens/ios/splash_iphone5.png" vs:platform="ios" width="640" height="1136" />
  <!--ipad non-retina -->
  <vs:splash src="res/screens/ios/splash_ipad.png" vs:platform="ios" width="768" height="1024" />
  <!--ipad retina -->
  <vs:splash src="res/screens/ios/splash_ipadretina.png" vs:platform="ios" width="1536" height="2048" />
  <!--ipod non-retina -->
  <vs:splash src="res/screens/ios/splash_ipod.png" vs:platform="ios" width="320" height="480" />
  <!--ipod non-retina -->
  <vs:splash src="res/screens/ios/splash_ipodretina.png" vs:platform="ios" width="640" height="960" />

  <!-- WinPhone -->
  <vs:splash src="resources/splash.png" vs:platform="winphone" />

  <icon src="resources/images/icons/ios/MyFileIt_icon72_72.png" platform="ios" width="72"  height="72"  />
  <icon src="resources/images/icons/ios/MyFileIt_icon72_72.png" platform="ios" width="144"  height="144"  />
  <icon src="resources/images/icons/ios/MyFileIT_icon57_57.png"  platform="ios" width="57" height="57"/>
  <icon src="resources/images/icons/ios/MyFileIt_icon76_76.png" platform="ios" width="76"  height="76"  />
  <icon src="resources/images/icons/ios/MyFileIT_icon120_120.png" platform="ios"  width="120" height="120"/>
  <icon src="resources/images/icons/ios/MyFileIT_icon152_152.png" platform="ios"  width="152" height="152"/>

  <platform name="android">
    <icon src="icon.png" />
  </platform>
